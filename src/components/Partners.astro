---
import { Image } from 'astro:assets';
import bmdLogo from '../assets/logos/bmd.png';
import broadLogo from '../assets/logos/broad.svg';
import cimicLogo from '../assets/logos/cimic-svg.svg';
import csrLogo from '../assets/logos/csr.png';
import multiplexLogo from '../assets/logos/multiplex.png';
import santosLogo from '../assets/logos/santos.svg';
import woodsideLogo from '../assets/logos/woodside.svg';
import shellLogo from '../assets/logos/Shell.svg';

const partners = [
  { name: "BMD Company", logo: bmdLogo },
  { name: "Broad Construction", logo: broadLogo },
  { name: "Cimic Group", logo: cimicLogo },
  { name: "CSR", logo: csrLogo },
  { name: "Multiplex", logo: multiplexLogo },
  { name: "Santos", logo: santosLogo },
  { name: "Shell Energy", logo: shellLogo },
  { name: "Woodside", logo: woodsideLogo }
];
---

<section class="bg-white py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-serif font-bold text-center mb-12">Project Partners</h2>
    <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-4 gap-8">
      {partners.map((partner) => (
        <div class="flex items-center justify-center">
          <Image 
            src={partner.logo} 
            alt={partner.name} 
            class="max-h-16 w-auto grayscale hover:grayscale-0 transition-all duration-300"
            width={200}
            height={64}
          />
        </div>
      ))}
    </div>
  </div>
</section>
