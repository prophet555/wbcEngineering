const testimonials = [
  {
    quote: "WBC Engineering's expertise in material behavior and defect prevention has been invaluable to our pipeline projects. Their ISO-9001 certified quality management system ensures every weld meets the highest standards. We've awarded them multiple contracts because of their consistent excellence.",
    author: "Michael Chen",
    title: "Project Director",
    company: "Energy Infrastructure Solutions"
  },
  {
    quote: "What sets WBC Engineering apart is their comprehensive approach to welding quality management. Their team of certified welding engineers and inspectors has helped us maintain perfect safety records while meeting aggressive project timelines. They're our go-to partner for all critical welding operations.",
    author: "Sarah Martinez",
    title: "Construction Manager",
    company: "Power Generation Systems"
  },
  {
    quote: "The turnkey engineering solutions provided by WBC Engineering have transformed how we handle complex welding challenges. Solving unpredictable welding engineering problems while maintaining quality standards has made them an indispensable partner in our construction projects.",
    author: "David Thompson",
    title: "Senior Project Engineer",
    company: "Industrial Construction Corp"
  }
];
---

<section class="bg-gray-100 py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-serif font-bold text-center mb-12">Client Success Stories</h2>
    <div class="flex overflow-x-auto snap-x snap-mandatory">
      {testimonials.map((testimonial) => (
        <div class="flex-shrink-0 w-full sm:w-1/2 md:w-1/3 snap-start">
          <div class="bg-white rounded-lg shadow-lg p-8 mx-4">
            <p class="text-gray-600 italic mb-4">{testimonial.quote}</p>
            <div class="flex items-center">
              <!-- Image component commented out for future use
              <Image 
                src={testimonial.image} 
                alt={testimonial.author} 
                class="w-12 h-12 rounded-full mr-4"
                // width={600}
                // height={400}
              />
              -->
              <div>
                <p class="font-semibold">{testimonial.author}</p>
                <p class="text-sm text-gray-500">{testimonial.title}</p>
                <p class="text-sm text-gray-500">{testimonial.company}</p>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
